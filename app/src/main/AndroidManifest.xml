<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myfirstlowkeyadvancedapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/green_dots"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/green_dots_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyFirstLowkeyAdvancedApp">
        <activity
            android:name=".BMIActivity"
            android:parentActivityName=".Activity2"
            android:exported="true" />
        <activity
            android:name=".Activity3"
            android:exported="true"
            android:noHistory="true"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Activity2"
            android:exported="true"
            android:noHistory="true"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Activity1"
            android:exported="true"
            android:noHistory="true"
            android:parentActivityName=".MainActivity"
            android:theme="@style/RedHoloTheme" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="witek.android.intent.action.MYFIRSTAPP" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>